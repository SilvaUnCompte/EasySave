<UserControl x:Class="EasySave.View.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySave.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="red">
        <RadioButton x:Name="option_fr_radio" Content="fr" HorizontalAlignment="Left" Margin="373,124,0,0" VerticalAlignment="Top" GroupName="lang" />
        <RadioButton x:Name="option_en_radio" Content="en" HorizontalAlignment="Left" Margin="373,144,0,0" VerticalAlignment="Top" GroupName="lang" />
        <TextBox x:Name="option_logPath_textBox" HorizontalAlignment="Left" Margin="361,170,0,0" TextWrapping="Wrap" Text="logpath" VerticalAlignment="Top" Width="120" />
        <RadioButton x:Name="option_formatXML_radio" Content="XML" HorizontalAlignment="Left" Margin="373,212,0,0" VerticalAlignment="Top" GroupName="logFormat" />
        <RadioButton x:Name="option_formatJson_radio" Content="Json" HorizontalAlignment="Left" Margin="373,237,0,0" VerticalAlignment="Top" GroupName="logFormat" />
        <TextBox x:Name="option_crypExt_textBox" HorizontalAlignment="Left" Margin="361,265,0,0" TextWrapping="Wrap" Text="ext" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="option_businessSoft_textBox" HorizontalAlignment="Left" Margin="361,288,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" />
        <Button x:Name="option_save_button" Content="save" HorizontalAlignment="Left" Margin="394,327,0,0" VerticalAlignment="Top" Click="option_save_button_Click" />
        <TextBlock x:Name="option_saveConfirm_textBlock" HorizontalAlignment="Left" Margin="383,352,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBox x:Name="option_cryptoPath_textBox" HorizontalAlignment="Left" Margin="361,61,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
